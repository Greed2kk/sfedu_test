{% extends 'base.html.twig' %}

{% block title %}Публичная страница{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .captions { font-size: 15pt; font-weight: 600; text-align: left; }
    </style>

    <div class="example-wrapper">
        <h1>Публичная страница</h1>
        <table border="1">  
            <caption class="captions">Сотрудники</caption>
            <tr>
                <th>№</th>
                <th>Ф.И.О</th>
                <th>Действие</th>
            </tr>
            {% for key, employee in employees %}
                <tr>
                    <td> {{ key+1 }} </td>
                    <td> {{ employee.fio }}</td>
                    <td> <a href="{{ path('more_info_employee', { 'employee_id': employee.id }) }}">Подробнее</td> 
                </tr>
            {% endfor %}
        </table>

        <br>

        <table border="1">  
            <caption class="captions">Подразделения</caption>
            <tr>
                <th>№</th>
                <th>Наименование</th>
                <th>Действие</th>
            </tr>
            {% for key, subdivision in subdivisions %}
                <tr>
                    <td> {{ key+1 }} </td>
                    <td> {{ subdivision.title }} </td> 
                    <td> <a href="{{ path('more_info_subdivision', { 'subdivision_id': subdivision.id }) }}">Подробнее</td> 
                </tr>
            {% endfor %}
        </table>

    {% endblock %}
