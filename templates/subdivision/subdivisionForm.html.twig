{% extends 'base.html.twig' %}

{% block title %}Форма для добавления/изменения подразделение{% endblock %}

{% block body %}
    <div class="container">
        <h2>Подразделение</h2>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"
             {{ form_start(form) }}
             
             <div class="form-group">
                <label for="textarea">{{ form_label(form.title) }} </label><br>
                {{ form_widget(form.title) }}
            </div>
            
             <div class="form-group">
                <label for="textarea">{{ form_label(form.address) }} </label><br>
                {{ form_widget(form.address) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.FkDir.id) }} </label><br>
                {{ form_widget(form.FkDir.id) }}
            </div>
          
            <button type="submit">Save</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %} 
            

