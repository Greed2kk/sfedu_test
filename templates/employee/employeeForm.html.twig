{% extends 'base.html.twig' %}

{% block title %}Форма для добавления/изменения сотрудника{% endblock %}

{% block body %}
    <div class="container">
        <h2>Сотрудник</h2>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"
            {{ form_start(form) }}
             
             <div class="form-group">
                <label for="textarea">{{ form_label(form.fio) }} </label><br>
                {{ form_widget(form.fio) }}
            </div>
            
             <div class="form-group">
                <label for="textarea">{{ form_label(form.bdate) }} </label><br>
                {{ form_widget(form.bdate) }}
            </div>
            
             <div class="form-group">
                <label for="textarea">{{ form_label(form.imageFile) }} </label><br>
                {{ form_widget(form.imageFile) }}
            </div>
              
             <input type = "submit" name = "submit" value = "Отправить"> 
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
            

